<?xml version="1.0"?>
<robot name="tortoisebot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="cylinder_model" params="name parent child">
    <link name="${name}_junta1">
      <inertial>
        <mass value="0.025" />
        <inertia ixx="5.8083e-4" ixy="0" ixz="0" iyy="3.0833e-5" iyz="0" izz="5.9083e-4" />
      </inertial>
    </link>
    <link name="${name}_junta2">
      <inertial>
        <mass value="0.025" />
        <inertia ixx="5.8083e-4" ixy="0" ixz="0" iyy="3.0833e-5" iyz="0" izz="5.9083e-4" />
      </inertial>
    </link>
    <link name="${name}_junta3">
      <inertial>
        <mass value="0.025" />
        <inertia ixx="5.8083e-4" ixy="0" ixz="0" iyy="3.0833e-5" iyz="0" izz="5.9083e-4" />
      </inertial>
    </link>
    <joint name="${name}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${name}_junta1"/>
      <axis xyz="0 1 0" />
    </joint>
    <joint name="${name}_joint2" type="continuous">
      <parent link="${name}_junta1"/>
      <child link="${name}_junta2"/>
      <axis xyz="0 0 1" />
    </joint>
    <joint name="${name}_joint3" type="continuous">
      <parent link="${name}_junta2"/>
      <child link="${name}_junta3"/>
      <axis xyz="1 0 0" />
    </joint>
  <joint name="${name}_jointfixed" type="fixed">
      <parent link="${name}_junta3"/>
      <child link="${child}"/>
      <origin rpy="1.57 0 0" xyz="0 0.015 0"/>
    </joint>
  </xacro:macro>

